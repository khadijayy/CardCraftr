<% @templates.each do |template| %>
  <div class="template-card" style="border: 1px solid #ccc; padding: 16px; margin-bottom: 16px;">
    
    <%# Show image if attached %>
    <% if template.image.attached? %>
      <%= image_tag template.image, width: 300, height: 200, style: "object-fit: cover;" %>
    <% else %>
      <p>No image uploaded</p>
    <% end %>

    <%# Template name %>
    <h3 style="color: #333;"><%= template.name %></h3>

    <div style="margin-top: 10px;">
      <%#  Customize Button (for user customization) %>
      <%= link_to 'Customize', new_template_customized_card_path(template),
                  class: "btn btn-success", style: "margin-right: 10px;" %>

      <%# Edit Template (for admin) %>
      <%= link_to 'Edit Template', edit_template_path(template),
                  class: "btn btn-primary", style: "margin-right: 10px;" %>

    </div>

  </div>
<% end %>
