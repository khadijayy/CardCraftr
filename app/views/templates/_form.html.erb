<%= form_with(model: @template, local: true) do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
  
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name %>
  
    <%= form.label :image, "Upload Template Image" %>
    <%= form.file_field :image %>
  
    <%= form.submit %>
  <% end %>
  